<header class="masthead">
    <div class="masthead-inner">
        <h1>{{$$.plugin.blog.title}}</h1>
        <p class="lead">{{$$.plugin.blog.description}}</p>

        <div class="colophon">
            <ul class="colophon-links">
                <li>
                    <a href="{{$$.plugin.blog.host}}">首页</a>
                </li>
                {{#each $$.plugin.pages}}
                <li>
                    <a href="{{url}}">{{title}}</a>
                </li>
                {{/each}}
            </ul>
            <p class="poweredby">Proudly powered by
                <a href="http://silky.wvv8oo.com" target="_blank">Silky {{silky.version}}</a> |
                <a href="{{$$.plugin.blog.feed}}">RSS</a></p>
            <p class="poweredby">Designed by <a href="{{theme.url}}" target="_blank">{{theme.title}}</a></p>
        </div>

    </div>
</header>